@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de Usuarios";
}
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" asp-controller="Usuario" asp-action="Criar">Adicionar novo usuario</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close"l >X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-warning" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close"l >X</button>
            @TempData["MensagemErro"]
        </div>
    }
    


    <br />
    <h1 class="display-4">Listagem de usuarios</h1>

    <table class="display" id="table-usuarios">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">Login</th>
          <th scope="col">Email</th>
          <th scope="col">Perfil</th>
          <th scope="col">Total de Contatos</th>
          <th scope="col">Data de cadastro</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
          @if (Model != null && Model.Any())
          {
              foreach (UsuarioModel usuario in Model)
              {
                  <tr>
                      <th scope="row">@usuario.Id</th>
                      <td>@usuario.Nome</td>
                      <td>@usuario.Login</td>
                      <td>@usuario.Email</td>
                      <td>@(usuario.Perfil == ControleDeContatos.Enums.PerfilEnum.Admin ? "Administrador" : "Padrao")</td>
                      <td>
                          <a href="javascript:" usuario-id="@usuario.Id" usuario class="btn btn-success btn-sm btn-total-contatos">
                              @(usuario.Contatos != null && usuario.Contatos.Any() ? usuario.Contatos.Count() : 0)
                          </a>
                      </td>
                      <td>@usuario.DataCadastro</td>
                      <td>
                          <div class="btn-group" role="group">
                              <a role="button" class="btn btn-primary" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Editar">Editar</a>
                              <a role="button" class="btn btn-danger" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="ApagarConfirmacao">Apagar</a>
                          </div>
                      </td>
                  </tr>
              }
          }
      
      
    
      </tbody>
    </table>
    
    <div id="modalContatosUsuario" class="modal" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Listagem de contato</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <div id="listaContatosUsuario"></div>
          </div>
          
        </div>
      </div>
    </div>    



</div>
